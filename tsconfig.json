{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "rootDir": "./src",
        "allowJs": true,
        "outDir": "./pkl.novaextension/Scripts",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "typeRoots": ["./src/types", "./node_modules/@types"]
    },
    "include": ["./src/**/*"]
}
